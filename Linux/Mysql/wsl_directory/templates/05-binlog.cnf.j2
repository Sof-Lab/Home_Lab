[mysqld]
log-bin = mysql-bin
expire-logs-days = 7
max-binlog-size = 16M
binlog-format = "ROW"

# GTID replication config
log-slave-updates = On
gtid-mode = On
enforce-gtid-consistency = On

# Эта часть только для слэйва - исключаем репликацию таблиц
{{ comment }}replicate-ignore-table=bet.events_on_demand
{{ comment }}replicate-ignore-table=bet.v_same_event
{{ comment }}relay-log = relay-log-server
{{ comment }}read-only = ON
